# Environment variables for gRINN Web Service
# Copy this file to .env and customize for your environment

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8050
FRONTEND_DEBUG=false

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=your-grinn-bucket
GCS_PROJECT_ID=your-gcp-project-id
GCS_CREDENTIALS_PATH=/path/to/your/gcs-credentials.json

# gRINN Docker Configuration
GRINN_DOCKER_IMAGE=grinn:latest
DOCKER_TIMEOUT=3600

# Job Configuration
MAX_FILE_SIZE_MB=500
JOB_RETENTION_DAYS=7
MAX_CONCURRENT_JOBS=10

# Security Configuration
SECRET_KEY=your-secret-key-here
UPLOAD_FOLDER=/tmp/grinn-uploads

# Logging
LOG_LEVEL=INFO